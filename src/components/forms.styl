/* text, email, password, url */
input.exy-forms__input  
	border: 0
	border-bottom: 3px solid
	height: 43px
	width: 187px
	padding-left: 4px
	border-radius: 3px
	margin-top: 5px
	margin-bottom: 5px
	margin-right: 3.75px
	margin-left: 3.75px
 

input.exy-forms__input.exy-forms__shadow  
	box-shadow: 3px 3px 15px 0px rgba(0,0,0,0.75)
 

input.exy-forms__input.exy-forms__hover:hover  
	box-shadow: 6px 6px 30px 0px rgba(0,0,0,0.75)
	transition: 0.5s
 